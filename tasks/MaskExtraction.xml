<?xml version="1.0" encoding="utf-8"?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Maciej Stefa≈Ñczyk</name>
			<link></link>
		</Author>
		
		<Description>
			<brief>Simple PCL viewer</brief>
			<full>Simple PCL viewer, using PCD as source of depth data.</full>	
		</Description>
	</Reference>
	
	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="Exec1"  period="0.1">
				<Component name="Source" type="PCL:PCDReader" priority="1" bump="0">
					<param name="filename">/home/lzmuda/PCL_Plane/xyzCloud.pcd</param>
				</Component>
				<Component name="TransformParameterGenerator" type="CvStereo:TransformParameterGenerator" priority="1" bump="0">
				</Component>
				<Component name="DepthTransform" type="CvStereo:DepthTransform" priority="1" bump="0">
				</Component>
				<Component name="CenterMassGenerator" type="CvStereo:CenterMassGenerator" priority="1" bump="0">
				</Component>
				<Component name="Mask" type="CvStereo:CubicMaskExtractor" priority="1" bump="0">
					<param name="ransacFilter.XAxisMax_treshold">0.5</param>
					<param name="ransacFilter.XAxisMin_treshold">0.5</param>
					<param name="ransacFilter.YAxisMax_treshold">0.5</param>
					<param name="ransacFilter.YAxisMin_treshold">0.5</param>
					<param name="ransacFilter.ZAxisMax_treshold">0.5</param>
					<param name="ransacFilter.ZAxisMin_treshold">0.5</param>
				</Component>
				
			</Executor>
		</Subtask>
		<Subtask name="Visualisation">
			<Executor name="Exec2" period="0.01">
				<Component name="Window" type="PCL:CloudViewer" priority="1" bump="0">
					<param name="coordinate_system">false</param>
				</Component>
				<Component name="Window2" type="PCL:CloudViewer" priority="2" bump="0">
					<param name="after_rotation">false</param>
				</Component>
				<Component name="Window3" type="PCL:CloudViewer" priority="3" bump="0">
					<param name="after_filtering">false</param>
				</Component>
				<Component name="MaskImage" type="CvBasic:CvWindow" priority="4" bump="0">
					<param name="count">1</param>
					<param name="title">Mask</param>
				</Component>
			</Executor>
		</Subtask>
	</Subtasks>
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="Source.out_cloud_xyz">
			<sink>Window.in_cloud_xyz</sink>
			<sink>TransformParameterGenerator.in_cloud_xyz</sink>
			<sink>CenterMassGenerator.in_cloud_xyz</sink>
			<sink>DepthTransform.in_cloud_xyz</sink>
		</Source>
		<Source name="TransformParameterGenerator.out_rvec">
			<sink>DepthTransform.in_rvec</sink>
		</Source>
		<Source name="TransformParameterGenerator.out_tvec">
			<sink>DepthTransform.in_tvec</sink>
		</Source>
		<Source name="DepthTransform.out_cloud_xyz">
			<sink>Mask.in_cloud_xyz</sink>
			<sink>Window2.in_cloud_xyz</sink>
		</Source>
		<Source name="CenterMassGenerator.out_centerMassPoint">
			<sink>Mask.in_centerMassPoint</sink>
		</Source>
		<Source name="Mask.out_filtered_cloud">
			<sink>Window3.in_cloud_xyz</sink>
		</Source>
	        <Source name="Mask.out_mask">
			<sink>MaskImage.in_img</sink>
		</Source>
	</DataStreams>
</Task>




