<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Dawid Kaczmarek, Łukasz Żmuda</name>
			<link></link>
		</Author>
	
		<Description>
			<brief>Disparity viewer</brief>
			<full>Generate and displays point cloud generated from stereo camera</full>
		</Description>
	</Reference>

	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="ExecDisp" period="1">
				<Component name="SourceLeft" type="CameraPGR:CameraPGR" priority="1" bump="-1">
					<!--<param name="device">1</param>-->
					<param name="camera_serial">13201068</param>
					<param name="pixel_format">RGB</param>
				</Component>
				<Component name="SourceRight" type="CameraPGR:CameraPGR" priority="1" bump="-1">
					<!--<param name="device">1</param>-->
					<param name="camera_serial">13201080</param>
					<param name="pixel_format">RGB</param>
				</Component>
				<Component name="CameraInfoLeft" type="CvCoreTypes:CameraInfoProvider" priority="4" bump="0">
					<param name="data_file">/home/dkaczmar/stereo/info/left.yml</param>
				</Component>
				<Component name="CameraInfoRight" type="CvCoreTypes:CameraInfoProvider" priority="5" bump="0">
					<param name="data_file">/home/dkaczmar/stereo/info/right.yml</param>
				</Component>
				<Component name="DepthCalculator" type="CameraPGR:DepthProcessor" priority="6" bump="0">
					<param name="minDisparity">160</param>
					<param name="numberOfDisparities">320</param>
					<param name="uniquenessRatio">25</param>
				</Component>
				<Component name="PCDWriter" type="PCL:PCDWriter" priority="9" bump="0">
					<param name="filename">/home/dkaczmar/stereo/cloud/output.pcd</param>
				</Component>
			</Executor>
			<Executor name="DisplayExec" period="0.5">
				<Component name="WindowDepth" type="PCL:CloudViewer" priority="10" bump="0">
					<param name="count">1</param>
					<param name="title">Depth Cloud</param>
				</Component>
			</Executor>
		</Subtask>	
	</Subtasks>
	
	<!-- connections between events and handelrs -->
	<Events>
	</Events>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="SourceLeft.out_img">
			<sink>DepthCalculator.l_in_img</sink>
		</Source>
		<Source name="SourceRight.out_img">
			<sink>DepthCalculator.r_in_img</sink>
		</Source>
		<Source name="CameraInfoLeft.out_camera_info">
			<sink>DepthCalculator.l_cam_info</sink>
		</Source>
		<Source name="CameraInfoRight.out_camera_info">
			<sink>DepthCalculator.r_cam_info</sink>
		</Source>
		<Source name="DepthCalculator.out_cloud_xyzrgb">
			<sink>WindowDepth.in_cloud_xyzrgb</sink>
			<sink>PCDWriter.in_cloud_xyzrgb</sink>
		</Source>
	</DataStreams>
</Task>

